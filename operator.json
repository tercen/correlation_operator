{
  "name": "Correlation",
  "description": "Computes the correlation coefficient between two continuous variables.",
  "tags": [
    "descriptive statistics",
    "statistical testing"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/correlation_operator"
  ],
  "properties": [
    {
      "kind": "EnumeratedProperty",
      "name": "method",
      "defaultValue": "pearson",
      "values": [
        "pearson",
        "kendall",
        "spearman"
      ],
      "description": "Correlation test method to be used."
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "X",
            "type": "numeric",
            "description": "Value of one group of data.",
            "ontologyMapping": "x-axis",
            "crosstabMapping": "x",
            "cardinality": "1",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Y",
            "type": "numeric",
            "description": "Value of the other group of data.",
            "ontologyMapping": "y-axis",
            "crosstabMapping": "y",
            "cardinality": "1",
            "factors": []
          }
        ]
      }
    ]
  }
}